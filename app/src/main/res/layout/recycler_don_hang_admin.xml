<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="110dp">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/custom_edittext"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="6dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                app:cardCornerRadius="150dp">

                <ImageView
                    android:id="@+id/imgDonHang"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/caphe2" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDonHangEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a@gmail.com"
                    android:textSize="17sp"
                    android:textColor="@color/brown"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDonHangTen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coffee Marshmallow"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDonHangTuyChinh"
                    android:layout_marginBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đá - Nhỏ - Thường"
                    android:textSize="6pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDonHangGia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center"
                    android:text="30.000vnd"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDonHangSoLuong"
                    android:gravity="center"
                    android:layout_marginBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(2 đồ uống)"/>

                <TextView
                    android:id="@+id/tvDonHangStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Đang chờ duyệt"
                    android:textColor="@color/brown"
                    android:textStyle="bold" />


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_break_line"/>

</LinearLayout>