<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="8dp"
    android:paddingTop="4dp"
    android:orientation="vertical">

<!--    <androidx.cardview.widget.CardView-->
<!--        android:id="@+id/cvInfor"-->
<!--        android:layout_width="320dp"-->
<!--        android:layout_height="80dp"-->
<!--        app:cardCornerRadius="5dp"-->
<!--        app:cardElevation="6dp">-->

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:cardCornerRadius="150dp">

                <ImageView
                    android:id="@+id/imgProductGioHang"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/caphe2" />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:gravity="center"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTenDoUong"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/brown"
                    android:textStyle="bold"
                    android:text="Black Coffee"/>

                <LinearLayout
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvGiaSauGiam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="6dp"
                        android:textColor="@color/brown"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:text="50.000vnd"/>

                    <TextView
                        android:id="@+id/tvGiaGoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thể loại: "
                        android:paddingRight="2dp"
                        android:textColor="@color/black"
                        android:textSize="13dp"/>

                    <TextView
                        android:id="@+id/tvTheLoai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cà phê"
                        android:textStyle="bold"
                        android:textColor="@color/brown"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgSuaDoUong"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/baseline_edit_square_24"/>

                <ImageView
                    android:id="@+id/imgXoaDoUong"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_delete_outline_24"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
<!--    </androidx.cardview.widget.CardView>-->


</LinearLayout>