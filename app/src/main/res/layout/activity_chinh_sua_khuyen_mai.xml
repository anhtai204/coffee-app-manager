<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/v1"
    tools:context=".activity.admin.ChinhSuaKhuyenMaiActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSuaKhuyenMai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="20dp"
            android:text="Giảm giá (%)"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/edtPhanTramKhuyenMaiSua"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/custom_no_border"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Áp dụng cho đơn hàng tối thiểu"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_edittext"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/edtDieuKienKhuyenMaiSua"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/custom_no_border"/>

        </LinearLayout>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/brown"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/btnSuaKhuyenMai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cập nhật"
                android:textColor="#fff"
                android:gravity="center_vertical|center_horizontal"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>