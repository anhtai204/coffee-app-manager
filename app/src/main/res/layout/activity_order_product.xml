<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.user.OrderProductActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/caphe2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvInfor"
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:layout_marginTop="220dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvTenSanPham"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:text="Coffee Capuchino"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvGiaSanPham"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="23.000vnd"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.709"
                        app:layout_constraintStart_toEndOf="@+id/tvTenSanPham"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/baseline_star_rate_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTenSanPham"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/tvRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:text="3.3"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        app:layout_constraintTop_toBottomOf="@+id/tvTenSanPham" />

                    <TextView
                        android:id="@+id/tvCountRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:text="(3)"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/tvRate"
                        app:layout_constraintTop_toBottomOf="@+id/tvTenSanPham" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/baseline_rate_review_24"
                        app:layout_constraintStart_toEndOf="@+id/tvCountRate"
                        app:layout_constraintTop_toBottomOf="@+id/tvTenSanPham" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="Xếp hạng và đánh giá"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imageView4"
                        app:layout_constraintTop_toBottomOf="@+id/tvTenSanPham" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView7" />

                    <LinearLayout
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/rectangle_border"
                        android:gravity="center_vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.622"
                        app:layout_constraintStart_toEndOf="@+id/tvTenSanPham"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imgMinus"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_remove_24" />

                        <TextView
                            android:id="@+id/tvCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle_border"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="1"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgPlus"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/baseline_add_24" />

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvOrder"
                android:layout_width="320dp"
                android:layout_height="190dp"
                android:layout_marginTop="28dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="320dp"
                    android:layout_height="190dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Tùy chỉnh"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Đồ uống"
                        android:textStyle="bold|italic"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="48dp"
                        android:text="Kích thước"
                        android:textStyle="bold|italic"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="92dp"
                        android:text="Đường"
                        android:textStyle="bold|italic"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />

                    <RadioGroup
                        android:id="@+id/rgDoUong"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="36dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <RadioButton
                            android:id="@+id/rbDa"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/custom_button_selected"
                            android:button="@null"
                            android:checked="true"
                            android:text="Đá"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />

                        <RadioButton
                            android:id="@+id/rbNong"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:background="@drawable/custom_button_unselected"
                            android:button="@null"
                            android:text="Nóng"
                            android:textAlignment="center"
                            android:textColor="@color/brown"
                            android:textSize="10dp" />
                    </RadioGroup>


                    <RadioGroup
                        android:id="@+id/rgKichThuoc"
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginEnd="4dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <RadioButton
                            android:id="@+id/rbNho"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/custom_button_selected"
                            android:button="@null"
                            android:checked="true"
                            android:text="Nhỏ"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />

                        <RadioButton
                            android:id="@+id/rbVua"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/custom_button_unselected"
                            android:button="@null"
                            android:checked="true"
                            android:text="Vừa"
                            android:textAlignment="center"
                            android:textColor="@color/brown"
                            android:textSize="10dp" />

                        <RadioButton
                            android:id="@+id/rbLon"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/custom_button_unselected"
                            android:button="@null"
                            android:checked="true"
                            android:text="Lớn"
                            android:textAlignment="center"
                            android:textColor="@color/brown"
                            android:textSize="10dp" />

                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/rgDuong"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="128dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <RadioButton
                            android:id="@+id/rbBinhThuong"
                            android:layout_width="70dp"
                            android:layout_height="22dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/custom_button_selected"
                            android:button="@null"
                            android:checked="true"
                            android:text="Bình thường"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />

                        <RadioButton
                            android:id="@+id/rbGiam"
                            android:layout_width="70dp"
                            android:layout_height="22dp"
                            android:background="@drawable/custom_button_unselected"
                            android:button="@null"
                            android:text="Giảm"
                            android:textAlignment="center"
                            android:textColor="@color/brown"
                            android:textSize="10dp" />
                    </RadioGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvThemLuaChon"
                android:layout_width="320dp"
                android:layout_height="180dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvOrder">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcv_topping"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_height="82dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

                <EditText
                    android:layout_width="320dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="Không bắt buộc"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Ghi chú"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.131"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvThemLuaChon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="82dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#D1C6C4"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="192.000vnd"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/brown"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Thêm vào giỏ hàng"
                        android:textColor="#fff"
                        android:gravity="center_vertical|center_horizontal"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>